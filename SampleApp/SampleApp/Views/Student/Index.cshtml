@{
    ViewData["Title"] = "Student Form";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">Student Entry Form</h2>

    <form asp-action="Index" method="post" class="card p-4 shadow-sm">

        <div class="mb-3">
            <label class="form-label">Student ID</label>
            <input type="number" class="form-control" name="Id" />
        </div>

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Course</label>
            <input type="text" class="form-control" name="Course" />
        </div>

        <button type="submit" class="btn btn-primary">
            Submit
        </button>
    </form>

    @if (Model != null)
    {
        <div class="card p-4 mt-4 shadow-sm">
            <h4 class="text-success">Entered Student Information</h4>
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Course:</strong> @Model.Course</p>
        </div>
    }
</div>

