@model StudentReportApp.Models.StudentReport

@{
    ViewData["Title"] = "Student Report Card";

    var subjects = Model.SubjectNames ?? new List<string>();

    Model.StudentGrades ??= new List<double>();
    while (Model.StudentGrades.Count < subjects.Count)
    {
        Model.StudentGrades.Add(0);
    }
}

<style>
    .sr-card {
        border-radius: 16px;
    }

    .sr-header {
        background: linear-gradient(135deg, #1e5aa8 0%, #2aa7d6 100%);
    }

    .sr-chip {
        background: rgba(255,255,255,.18);
        border: 1px solid rgba(255,255,255,.25);
        border-radius: 999px;
        padding: .35rem .65rem;
    }

    .sr-grade-card {
        border-radius: 14px;
        background: #f8fafc;
        border: 1px solid rgba(0,0,0,.06);
    }
</style>

<div class="container mt-5" style="max-width: 980px;">

    <form asp-action="Index" method="post">
        @Html.AntiForgeryToken()

        <div class="card border-0 shadow-lg overflow-hidden sr-card">

            <div class="card-header sr-header text-white p-4 border-0">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2">
                    <div>
                        <h3 class="mb-1 fw-bold">Student Report Card</h3>
                        <div class="opacity-75 small">Instruction: Fill in details and grades.</div>
                    </div>

                    <div class="sr-chip small">
                        @Model.GetCurrentDateTime()
                    </div>
                </div>
            </div>

            <div class="card-body p-4 p-md-5">

                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold text-dark small">Student ID Number</label>
                        <div class="input-group">
                            <span class="input-group-text">No.</span>

                            <input asp-for="StudentId"
                                   class="form-control"
                                   placeholder=""
                                   value="@(Model.StudentId == null ? "" : Model.StudentId.ToString())"
                                   required />
                        </div>
                    </div>

                    <div class="col-md-8">
                        <label class="form-label fw-semibold text-dark small">Student Name</label>
                        <input asp-for="StudentName"
                               class="form-control"
                               placeholder=""
                               value="@Model.StudentName"
                               required />
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0 text-secondary">Grades</h5>
                    <span class="badge bg-light text-dark border">1.0 best • 5.0 fail</span>
                </div>

                <div class="row g-3">
                    @for (int i = 0; i < subjects.Count; i++)
                    {
                        <div class="col-md-6">
                            <div class="sr-grade-card p-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="fw-semibold text-dark">@subjects[i]</div>
                                    <span class="badge bg-white text-secondary border">Subject @(i + 1)</span>
                                </div>

                                <div class="d-flex align-items-center justify-content-between mt-3">
                                    <div class="text-muted small">Grade</div>

                                    <input name="StudentGrades[@i]"
                                           type="number"
                                           step="0.1"
                                           min="1.0"
                                           max="5.0"
                                           class="form-control text-end"
                                           style="width: 100px;"
                                           placeholder=""
                                           value="@(Model.StudentGrades[i] == 0 ? "" : Model.StudentGrades[i].ToString("0.0"))" 
                                           required />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Clear</a>
                    <button type="submit" class="btn btn-success px-4">Generate Report</button>
                </div>

            </div>
        </div>
    </form>

</div>