@model StudentReportApp.Models.StudentReport

@{
    ViewData["Title"] = "Report Result";

    var subjects = Model.SubjectNames ?? new List<string>();

    Model.StudentGrades ??= new List<double>();
    while (Model.StudentGrades.Count < subjects.Count)
    {
        Model.StudentGrades.Add(0);
    }

    double finalGpa = Model.ComputeGPA();
    bool isPassed = finalGpa <= 3.0;
}

<style>
    .sr-card {
        border-radius: 16px;
    }
</style>

<div class="container mt-5" style="max-width: 980px;">

    <div class="card border-0 shadow-lg overflow-hidden sr-card">
        <div class="card-header @(isPassed ? "bg-success" : "bg-danger") text-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0 fw-bold">@Model.StudentName</h3>
                    <div class="text-white-50">Student ID: @Model.StudentId</div>
                </div>

                <div class="text-end">
                    <div class="badge bg-white @(isPassed ? "text-success" : "text-danger") fs-6 px-3 py-2 shadow-sm">
                        @Model.GetRemarks(finalGpa)
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-4 p-md-5">
            <div class="row g-3 align-items-center mb-3">
                <div class="col-md-6">
                    <div class="text-muted small">Report Generated On</div>
                    <div class="fw-semibold">@Model.GetCurrentDateTime()</div>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="text-muted small">Overall GPA</div>
                    <div class="display-6 fw-bold text-primary mb-0">@finalGpa.ToString("0.00")</div>
                </div>
            </div>

            <hr class="my-4" />

            <h5 class="mb-3">Grade Breakdown</h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Subject</th>
                            <th class="text-end">Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < subjects.Count; i++)
                        {
                            <tr>
                                <td class="fw-semibold">@subjects[i]</td>
                                <td class="text-end fw-bold">@Model.StudentGrades[i].ToString("0.0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
            </div>
        </div>
    </div>

</div>